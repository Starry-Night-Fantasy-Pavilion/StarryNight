{
    "plugin_id": "wechat_oauth",
    "name": "微信登录",
    "version": "1.0.0",
    "description": "通过微信开放平台进行第三方登录，使用OAuth2认证流程",
    "author": "StarryNight Team",
    "website": "https:\/\/open.weixin.qq.com",
    "type": "thirdparty_login",
    "category": "oauth2",
    "namespace": "Plugins\\Notification\\WechatOauth",
    "main_class": "Plugin.php",
    "dependencies": [],
    "installed": true,
    "status": "enabled",
    "install_sql": null,
    "uninstall_sql": null,
    "config": {
        "usage_scenario": {
            "type": "checkbox",
            "label": "使用场景",
            "options": {
                "frontend": "前端使用"
            },
            "default": [
                "frontend"
            ],
            "required": false
        },
        "app_id": {
            "type": "text",
            "label": "微信AppID",
            "default": "",
            "required": true,
            "description": "从微信开放平台获取的AppID"
        },
        "app_secret": {
            "type": "password",
            "label": "微信AppSecret",
            "default": "",
            "required": true,
            "description": "从微信开放平台获取的AppSecret"
        },
        "redirect_uri": {
            "type": "text",
            "label": "回调地址",
            "default": "",
            "required": true,
            "description": "OAuth2回调地址，需要在微信开放平台中注册"
        },
        "scope": {
            "type": "text",
            "label": "授权范围",
            "default": "snsapi_login",
            "required": false,
            "description": "OAuth2授权范围，默认为snsapi_login"
        },
        "api_timeout": {
            "type": "number",
            "label": "API超时时间（秒）",
            "default": 10,
            "min": 1,
            "max": 60,
            "required": false
        }
    },
    "requirements": {
        "php": ">=7.4",
        "extensions": [
            "curl",
            "json"
        ]
    }
}
